{
  "name": "protoforge-desktop-suite",
  "version": "1.0.0",
  "description": "Optimized desktop suite for ForgeFinder, Frank Bot, and integrations",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node --max-old-space-size=512 --optimize-for-size index.js",
    "start:frank": "node --max-old-space-size=512 frank_core.cjs",
    "start:forgefinder": "next start",
    "dev": "concurrently \"npm:dev:*\"",
    "dev:frank": "nodemon --watch frank_core.cjs --exec \"node frank_core.cjs\"",
    "dev:forgefinder": "next dev",
    "build": "npm run build:forgefinder",
    "build:forgefinder": "next build",
    "test": "jest --coverage --maxWorkers=50%",
    "test:watch": "jest --watch",
    "test:perf": "jest --testNamePattern=performance",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "analyze": "ANALYZE=true next build",
    "postinstall": "husky install"
  },
  "dependencies": {
    "next": "^14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@prisma/client": "^5.7.1",
    "stripe": "^14.10.0",
    "next-auth": "^4.24.5",
    "micro": "^10.0.1",
    "axios": "^1.6.2",
    "ws": "^8.15.1",
    "node-cache": "^5.1.2",
    "p-limit": "^5.0.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "typescript": "^5.3.3",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "prisma": "^5.7.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "@next/bundle-analyzer": "^14.0.4"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8",
    "utf-8-validate": "^6.0.3",
    "@swc/core": "^1.3.100"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*.stories.{js,jsx,ts,tsx}"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}