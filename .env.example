# ballsDeepnit Performance Configuration

# Application Settings
APP_NAME=ballsDeepnit
DEBUG=false
VERSION=0.1.0

# Server Configuration
HOST=127.0.0.1
PORT=8000
DASHBOARD_PORT=8001

# Performance Settings
MAX_WORKERS=8
ASYNC_POOL_SIZE=100
EVENT_LOOP_POLICY=uvloop
GARBAGE_COLLECTION_THRESHOLD=1000

# Caching Configuration (for maximum performance)
ENABLE_REDIS_CACHE=true
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600
DISK_CACHE_SIZE_MB=100

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
METRICS_COLLECTION_INTERVAL=1.0
ENABLE_PROMETHEUS=false
PROMETHEUS_PORT=8090

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_STRUCTURED_LOGGING=true
LOG_BUFFER_SIZE=1000

# Feature Flags
ENABLE_HOT_RELOAD=true
ENABLE_VOICE_TRIGGERS=true
ENABLE_MIDI_TRIGGERS=true
ENABLE_WEB_DASHBOARD=true
ENABLE_API_ENDPOINTS=true

# Audio/MIDI Settings
AUDIO_SAMPLE_RATE=44100
AUDIO_BUFFER_SIZE=1024

# Communication Settings (optional)
DISCORD_WEBHOOK_URL=
EMAIL_SMTP_SERVER=
EMAIL_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=

# Security Settings
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60
MAX_REQUEST_SIZE_MB=10